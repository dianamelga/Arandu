<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cuento_card"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    cardview:cardCornerRadius="@dimen/cornerradius_cardview"
    android:layout_marginBottom="@dimen/activity_vertical_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1">

        <LinearLayout
            android:id="@+id/cuento"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/nombre_cuento"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:text="Ao ao rehegua"/>

            <TextView
                android:id="@+id/nombre_autor"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="Domingo Adolfo Aguilera Jimenez"/>

        </LinearLayout>

        <ImageButton
            android:id="@+id/boton_download_cuento"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:src="@drawable/download"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>